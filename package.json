{
  "name": "workspace-theme-switcher",
  "displayName": "Workspace Theme Switcher",
  "publisher": "zoydburger",
  "description": "A small Visual Studio Code extension that allows to specify themes based on the currently opened editor",
  "icon": "img/logo.png",
  "version": "0.0.2",
  "license": "MIT",
  "engines": {
    "vscode": "^1.90.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zoydburger/workspace-theme-switcher"
  },
  "categories": [
    "Themes"
  ],
  "activationEvents": [
    "onDidChangeActiveTextEditor",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "workspace-theme-switcher.enable",
        "title": "Enable Theme Switching"
      },
      {
        "command": "workspace-theme-switcher.disable",
        "title": "Disable Theme Switching"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Workspace Theme Switcher Configuration",
      "properties": {
        "workspace-theme-switcher.workspaces": {
          "type": "array",
          "contains": true,
          "items": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string",
                "description": "Path to the workspace"
              },
              "theme": {
                "type": "string",
                "description": "Theme to apply when editor in workspace is opened",
                "examples": [
                  "Default Dark+",
                  "Default Dark Modern",
                  "Default Light+",
                  "Default Light Modern",
                  "Visual Studio Dark",
                  "Visual Studio Light",
                  "Default High Contrast",
                  "Default High Contrast Light",
                  "Abyss",
                  "Monokai Dimmed"
                ]
              }
            }
          }
        },
        "workspace-theme-switcher.defaultTheme": {
          "type": "string",
          "description": "Default theme to apply when file cannot be matched"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "build:vsix": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "esbuild": "^0.21.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
